{% extends 'base.html.twig' %}

{% block title %}Mes articles{% endblock %}

{% block body %}
    <h1>Mes articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Slug</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td><a href="{{ path('article_show', {'id': article.id}) }}">{{ article.titre }}</a></td>
                <td>{{ article.slug }}</td>
                <td>{{ article.updatedAt ? article.updatedAt : (article.createdAt ?? 'inconnue') }}</td>
                <td>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
                    {{ include('article/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">aucun article trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('article_new') }}">Nouvel article</a>
{% endblock %}
